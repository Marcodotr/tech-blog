<section class="container bg-dark p-4 rounded-1">
    <div class="main-body">
        <div class="row d-flex">
            
            <div class="col-md-3 mb-3">
                <div class="card-body bg-light rounded-3">
                    <div class="d-flex flex-column text-center p-1"> 
                        <h3>{{currentPatient.first_name}} {{currentPatient.last_name}}</h3>
                        <a onclick="displayProfile()" class="btn btn-success my-2"><h5 class="my-1">Profile</h5></a>
                        <a onclick="allOrdersProfile()" class="btn btn-secondary my-2" ><h5 class="my-1">All Orders</h5></a>
                        <a onclick="pendingProfile()" class="btn btn-secondary my-2"><h5 class="my-1">Pending Orders</h5></a>
                        <a onclick="completeProfile()" class="btn btn-secondary my-2"><h5 class="my-1">Complete Orders</h5></a>
                        <a onclick="newProfile()" class="btn btn-secondary my-2"><h5 class="my-1">New Order</h5></a>

                    </div>   
                </div>
            </div>
                
            <div class="col-md-9" id="profile" >
                {{#if currentPatient as |currentPatient|}} 
                {{>profile-data}}
                {{/if}}
            </div> 

            {{!-- all orders --}}
         <div class="col-md-9" id="allOrders" style="display: none;">
                {{#if currentPatient as |currentPatient|}} 
                {{>allOrdersSpecific-data}}
                {{/if}}
                </div> 
        {{!-- pending orders --}}
<div class="col-md-9" id="pending" style="display: none;">
                {{#if currentPatient as |currentPatient|}} 
                {{>pendingSpecific-data}}
                {{/if}} 
</div>
                    {{!-- Complete orders --}}
<div class="col-md-9" id="Complete" style="display: none;">
                {{#if currentPatient as |currentPatient|}} 
                {{>completeSpecific-data}}
                {{/if}} 
</div>
                {{!-- new order --}}
<div class="col-md-9" id="new" style="display: none;">
<div class="card mb-3">
    <div class="card-body">
        <div class="container-fluid p-5 bg-light">
            <h6 style="text-align: center;">New order</h6>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th scope="col">Date of order</th>
                            <th scope="col">type of order</th>
                            <th scope="col">Order status</th>
                            <th scope="col">Send Order</th>
                            <!--patientId foreign key-->
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <form class="order-form">
                                <th scope="col"><input type="date"></th>
                                <th scope="col">
                                    <select name="orderType" id="orderType">
                                        <option value="glasses">Glasses</option>
                                        <option value="contacts">Contacts</option>
                                    </select>
                                </th>
                                <th scope="col">
                                    <select name="status" id="orderStatus">
                                        <option value="Pending">Pending</option>
                                        <option value="Ready">Ready</option>
                                        <option value="Complete">Complete</option>
                                    </select>
                                </th>
                                <th>
                                    <button id="orderSubmit">Submit</button>
                                </th>
                            </form>
                            <!--patientId foreign key-->
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
        </div>
    </div>    
</section>
<script src="/js/patientDisplay.js"></script>
<script src="/js/patient-page.js" ></script>
